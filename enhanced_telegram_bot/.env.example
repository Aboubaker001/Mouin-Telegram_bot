# Enhanced Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_IDS=123456789,987654321

# Course Configuration
COURSE_NAME=أساسيات البرمجة
COURSE_DESCRIPTION=دورة شاملة في تعلم أساسيات البرمجة باللغة العربية
INSTRUCTOR_NAME=المعلم

# Zoom Configuration
ZOOM_LINK=https://zoom.us/j/your-meeting-id
ZOOM_PASSWORD=your_zoom_password
MEETING_ID=your_meeting_id

# Schedule Configuration (keep as is or modify)
# CLASS_SCHEDULE is configured in settings.py

# Reminder Configuration
REMINDER_BEFORE_CLASS=60
DAILY_REMINDER_TIME=18:00
TIMEZONE=Africa/Cairo

# User Verification
VERIFICATION_REQUIRED=true
VERIFICATION_TIMEOUT=300
SUBSCRIPTION_CODES=STUDENT2024,COURSE123,PROG101

# Warning System
MAX_WARNINGS=3
MUTE_DURATION=3600
SPAM_THRESHOLD=5

# Database Configuration
DATABASE_URL=sqlite:///./data/bot_database.db

# File Storage
CONTENT_DIRECTORY=./content
UPLOADS_DIRECTORY=./uploads

# Quiz Configuration
QUIZ_QUESTIONS_PER_SESSION=3
QUIZ_TIME_LIMIT=300

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SHEETS_ID=your_google_sheets_id
GOOGLE_CREDENTIALS_FILE=./credentials/google_credentials.json

# Security
ALLOWED_FILE_TYPES=.pdf,.docx,.txt,.jpg,.png,.mp4
MAX_FILE_SIZE=52428800